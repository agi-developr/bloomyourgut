---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Become the top 1% in gut health knowledge." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | Bloom Your Gut</title>
  <link rel="stylesheet" href="/styles/global.css">
</head>
<body>
  <nav class="nav">
    <a href="/" class="logo">Bloom Your Gut</a>
    <div class="nav-links">
      <a href="/chapters">Chapters</a>
      <a href="/about">About</a>
    </div>
  </nav>
  
  <main>
    <slot />
  </main>
  
  <footer>
    <p>&copy; 2026 Bloom Your Gut. Evidence-based gut health education.</p>
    <p class="disclaimer">Not medical advice. Consult your healthcare provider.</p>
  </footer>
</body>
</html>
